<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane id="rootPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="barista.view.ProjectOverviewController">
    <rowConstraints>
        <RowConstraints />
        <RowConstraints percentHeight="70" />
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints fillWidth="true" percentWidth="100" /> 
    </columnConstraints>
    <children>
        
        <!-- Project Settings section -->
        <TitledPane animated="false" collapsible="false" text="Project Settings" GridPane.rowIndex="0">
            <content>
                <StackPane>
                    <children>
                        <GridPane hgap="5" vgap="5">
                            <padding>
                                <javafx.geometry.Insets bottom="5" left="5" right="5" top="5" />
                            </padding>
                            <children>
                                <Label text="Project folder: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <Label fx:id="projectFolderLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <Label text="Project description: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <TextField fx:id="projectDescriptionTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" /> 
                                <Button disable="${controller.projectSettingsAreUnchanged}" onAction="#handleSaveProjectSettingsChangesAction" text="Save changes" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                            </children>
                            <columnConstraints>
                                <ColumnConstraints />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                        </GridPane>
                    </children>
                </StackPane>
            </content>
        </TitledPane>
        <AnchorPane GridPane.columnIndex="0" GridPane.rowIndex="1">
            <children>
                <SplitPane dividerPositions="0.5" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <items>
                        
                        <!-- Configuration List section -->
                        <AnchorPane>
                            <children>
                                <TitledPane animated="false" collapsible="false" text="Configurations List" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <content>
                                        <StackPane>
                                            <children>
                                                <TableView fx:id="configurationTable">
                                                    <columns>
                                                        <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                    </columnResizePolicy>
                                                </TableView>
                                            </children>
                                        </StackPane>
                                    </content>
                                </TitledPane>
                            </children>
                        </AnchorPane>
                        
                        <!-- Selected configuration details section -->
                        <AnchorPane>
                            <children>
                                <TitledPane animated="false" collapsible="false" text="Selected configuration details" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <content>
                                    </content>
                                    <content>
                                        <StackPane>
                                            <children>
                                                <GridPane hgap="5.0" vgap="5.0">
                                                    <padding>
                                                        <javafx.geometry.Insets bottom="5" left="5" right="5" top="5" />
                                                    </padding>
                                                    <columnConstraints>
                                                        <ColumnConstraints />
                                                        <ColumnConstraints fillWidth="true" hgrow="ALWAYS" />
                                                        <ColumnConstraints hgrow="SOMETIMES" />
                                                    </columnConstraints>
                                                    <rowConstraints>
                                                        <RowConstraints />
                                                        <RowConstraints />
                                                        <RowConstraints />
                                                        <RowConstraints />
                                                        <RowConstraints />
                                                    </rowConstraints>
                                                    <children>
                                                        <Label text="Name:" />
                                                        <TextField fx:id="nameTextField" GridPane.columnIndex="1" />
                                                        <Label text="Solver file:" GridPane.rowIndex="1" />
                                                        <TextField fx:id="solverFileNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                                        <Button mnemonicParsing="false" text="..." GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                                        <Label text="Train file:" GridPane.rowIndex="2" />
                                                        <TextField fx:id="trainFileNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                                        <Button mnemonicParsing="false" text="..." GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                                        <Label text="Test file:" GridPane.rowIndex="3" />
                                                        <TextField fx:id="testFileNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                                        <Button mnemonicParsing="false" text="..." GridPane.columnIndex="2" GridPane.rowIndex="3" />
                                                        <HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="4">
                                                            <children>
                                                                <Button mnemonicParsing="false" text="New" />
                                                                <Button mnemonicParsing="false" text="Save changes" />
                                                                <Button mnemonicParsing="false" text="Delete" />
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                </GridPane>
                                            </children>
                                        </StackPane>
                                    </content>
                                </TitledPane>
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>
            </children>
        </AnchorPane>
    </children>
</GridPane>
