                      <MenuItem fx:id="openProjectMenuItem" text="_Open Project..." onAction="#handleOpenProjectAction" mnemonicParsing="true" />
                      <MenuItem fx:id="settingsMenuItem" text="_Settings" onAction="#handleSettingsAction" mnemonicParsing="true" />
                      <SeparatorMenuItem />
                      <MenuItem text="E_xit" onAction="#handleExitAction" mnemonicParsing="true" />
                   </items>
                </Menu>
            </menus>
        </MenuBar> 
    </top>
</BorderPane>
